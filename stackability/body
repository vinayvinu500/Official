        FOR i IN 1..available_demand.count LOOP
            IF available_demand(i).quantity > 0 THEN
                RETURN true;
            END IF;
        END LOOP;

        RETURN false;
--     -- Set Interface end time and successful status of the program
--        l_d_end_date_time := systimestamp;
